<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ValueX"
            android:textSize="32sp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp" />

        <!-- Salary Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Salary (TND)"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/salaryInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your monthly salary"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:padding="15dp"
            android:layout_marginBottom="20dp"
            tools:ignore="HardcodedText" />

        <!-- Product Price Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Price (TND)"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/priceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter product price"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:padding="15dp"
            android:layout_marginBottom="20dp" />

        <!-- Working Hours Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Working Hours"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/hoursInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Default: 160 hours"
            android:text="160"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:padding="15dp"
            android:layout_marginBottom="30dp" />

        <!-- Calculate Button -->
        <Button
            android:id="@+id/calculateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:textSize="18sp"
            android:backgroundTint="#2196F3"
            android:textColor="#fff"
            android:padding="15dp"
            android:layout_marginBottom="30dp" />

        <!-- Result Display -->
        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter values to calculate"
            android:textSize="20sp"
            android:textColor="#333"
            android:gravity="center"
            android:padding="20dp"
            android:background="#e3f2fd"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>